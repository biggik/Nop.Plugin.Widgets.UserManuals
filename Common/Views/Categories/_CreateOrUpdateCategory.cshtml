@model CategoryModel
@using Nop.Plugin.Widgets.UserManuals.Models;
@using Nop.Web.Framework
@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)
<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="@Model.Name" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="@Model.Name" asp-required="true" />
                            <span asp-validation-for="@Model.Name" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="@Model.DisplayOrder" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="@Model.DisplayOrder" asp-required="true" />
                            <span asp-validation-for="@Model.DisplayOrder" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="@Model.Published" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="@Model.Published" asp-required="true" />
                            <span asp-validation-for="@Model.Published" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>