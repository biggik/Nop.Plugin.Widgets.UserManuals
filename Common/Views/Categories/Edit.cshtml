@{
    Layout = "~/Plugins/Widgets.UserManuals/Views/Shared/_AdminShared.cshtml";
}
@model CategoryModel
@using Nop.Plugin.Widgets.UserManuals.Models;
@using Nop.Plugin.Widgets.UserManuals.Resources;
@using Nop.Plugin.Widgets.UserManuals.Controllers;
@{
    ViewBag.PageTitle = T(AdminResources.EditCategoryCaption).Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "category-form" }))
{
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T(AdminResources.EditCategoryCaption)
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                @Html.ActionLink(T(CategoryActionResources.BackToList).Text,
                    nameof(CategoriesController.List),
                    CategoriesController.ControllerName,
                    new { area = "Admin" },
                    null)
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="category-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    <partial name="_CreateOrUpdateCategory.cshtml" />
}
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="category-delete" asp-action="Delete" />
